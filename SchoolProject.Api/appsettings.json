  "SeriLog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "Path": "log-${DateTime.Now.Year}-{DateTime.Now.Month}-{DateTime.Now.Day}.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] - Message {Message}{NewLine}{Exception}"

        }
      }
    ]
  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "dbcontext": "Server =(localdb)\\MSSQLLocalDB;integrated security=SSPI;initial catalog=SchoolProjectCleanArchitecture;trustservercertificate=True;"
  },
  "jwtsettings": {
    "Secret": "YourSecretKeyForAuthenticationOfApplication",
    "Issuer": "SchoolmyMurad.com",
    "Audience": "SchoolProject",
    "validateAudience": true,
    "validateIssure": true,
    "validateLifetime": true,
    "validateIssuerSigningKey": true,
    "AccessTokenExpire": 2,
    "RefreshTokenExpire": 3

  }
}
